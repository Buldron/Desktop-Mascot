<?xml version="1.0" encoding="UTF-8"?>
<Mascot>
    <ActionArray>
        <!-- Idle -->
        <Action type="idle" description="stand" collider="ground">
            <Animation>
                <Frame duration="100" velocity="0,0" image="/mascot1.png"/>
            </Animation>
        </Action>
        <!-- Fall -->
        <Action type="fall" description="falling" collider="ground">
            <Animation>
                <Frame duration="100" velocity="0,7" image="/mascot2.png"/>
            </Animation>
        </Action>

    </ActionArray>
</Mascot>